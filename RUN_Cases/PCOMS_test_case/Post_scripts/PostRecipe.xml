<?xml version="1.0" encoding="UTF-8" ?>
<postProcessing>
	<EulerianMeasures>
		<measures>			
			<filters>
				<filter key = "beaching" value= "1" comments = "0-all, 1-only non beached particles, 2-only beached (defaut=0)"/>
			</filters>
		</measures>
		<gridDefinition>
			<units value= "relative" comments="relative, meters, degrees"/>
			<resolution x="200" y="400" z="1"/>
		</gridDefinition>
	</EulerianMeasures>
	<convertFiles>
		<format key="hdf5"/>
	</convertFiles>
    <plot>
        <time value='all' comments='season, monthly, yearly or any other acepted pandas groupby'/>
        <method key='mean' comments='any implicit method, mean, std, diff, cumsum'/>
        <map type='contourf' comments='contour,pcolormesh,imshow'/> 
    </plot>
</postProcessing>
