<?xml version="1.0" encoding="UTF-8" ?>
<case>
    <casedef>
        <constantsdef>
			<Gravity x="0" y="0" z="-9.81" comment="Gravitational acceleration" units_comment="m/s^2" />
            <Rho_ref value="1100" comment="Reference density of the fluid" units_comment="kg/m^3" />
        </constantsdef>
		<simulationdefs>
			<resolution dp="0.5" units_comment="metres (m)"/>
            <pointmin x="0.0" y="0.0" z="-500" />
            <pointmax x="10000" y="20000.0" z="4.0" />
        </simulationdefs>        
        <sourcedef>
           	<source>
				<setsource id="0" name="Spill_007" />
				<set emitting_rate="0.1" units_comment="Hz" />
				<box>                        
					<point x="0" y="0" z="0" />
					<size x="1" y="1" z="1" />
				</box>
			</source>
			<source>
				<setsource id="1" name="Litter_plastic" />
				<set emitting_rate="0.01" units_comment="Hz" />
				<point x="0.49" y="0.49" z="0.75" />
			</source>
			<source>
				<setsource id="2" name="Plankton_2" />
				<set emitting_rate="0.2" units_comment="Hz" />
				<line>
					<point x="1" y="2" z="3" />
					<point x="11" y="21" z="31" />
				</line>
			</source>
			<source>
				<setsource id="3" name="Mistery_discharge_0" />
				<set emitting_rate="0.05" units_comment="Hz" />
				<sphere radius="0.5">
					<point x="1" y="1" z="0" />
				</sphere>
			</source>
        </sourcedef>
		<initials>
			<velocity source="1" ux="1" uy="0.0" uz="-0.1"/>
		</initials>
		<properties>
			<links>
                <link source="3" property="sed1" comment="Property for the sediment scalar" />
				<link source="2" property="plastic001" comment="Property for a plastic type" />
            </links>
            <property name="sed1">
                <Ci value="0.95" />
                <Rs value="0.0004" />
                <Cmax value="0.95" />
                <RhoS value="2.00" />
            </property>
			<property name="plastic001">                
                <Rs value="0.04" />                
                <RhoS value="0.90" />
            </property>
        </properties>		
    </casedef>
    <execution>
        <parameters>            
            <parameter key="Integrator" value="1" comment="Integration Algorithm 1:Verlet, 2:Symplectic, 3:RK4 (default=1)" />            
			<parameter key="CFL" value="0.8" comment="Courant–Friedrichs–Lewy condition number (default=0.5)" />
            <parameter key="InitFreeze" value="0.1" comment="Time to freeze the tracers at simulation start (warmup) (default=0.0)" units_comment="seconds" />            
            <parameter key="TimeMax" value="100.0" comment="Simulation duration" units_comment="seconds" />
            <parameter key="TimeOut" value="1" comment="Time out data (1/Hz)" units_comment="seconds" />            
        </parameters>
    </execution>
</case>
